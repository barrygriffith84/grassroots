@model IEnumerable<grassroots.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CountySortParm"]">  County </a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CitySortParm"]"> @Html.DisplayNameFor(model => model.City)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"> @Html.DisplayNameFor(model => model.Title)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StartSortParm"]"> @Html.DisplayNameFor(model => model.StartTime)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FinishSortParm"]">  @Html.DisplayNameFor(model => model.EndTime)</a>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
